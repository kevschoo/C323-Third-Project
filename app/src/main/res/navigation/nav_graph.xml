<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/welcome">

    <fragment
        android:id="@+id/welcome"
        android:name="com.example.c323project3.welcome"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcome_to_questions"
            app:destination="@id/questions" />
        <argument
            android:name="difficulty"
            app:argType="string"
            android:defaultValue="easy" />
        <argument
            android:name="questionAmount"
            app:argType="integer"
            android:defaultValue="10" />
        <argument
            android:name="operation"
            app:argType="string"
            android:defaultValue="addition" />
        <argument
            android:name="correct"
            app:argType="integer"
            android:defaultValue="0" />
        <argument android:name="incorrect"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/questions"
        android:name="com.example.c323project3.questions"
        android:label="fragment_questions"
        tools:layout="@layout/fragment_questions" >
        <action
            android:id="@+id/action_questions_to_results"
            app:destination="@id/results" />
        <argument
            android:name="questionAmount"
            app:argType="integer"
            android:defaultValue="10" />
        <argument
            android:name="correctAnswers"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="incorrectAnswers"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="operation"
            app:argType="string"
            android:defaultValue="addition" />
        <argument
            android:name="difficulty"
            app:argType="string"
            android:defaultValue="easy" />
    </fragment>
    <fragment
        android:id="@+id/results"
        android:name="com.example.c323project3.results"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results" >
        <action
            android:id="@+id/action_results_to_welcome"
            app:destination="@id/welcome" />
        <argument
            android:name="correctAnswers"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="incorrectAnswers"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="questionAmount"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="difficulty"
            app:argType="string"
            android:defaultValue="easy" />
        <argument
            android:name="operation"
            app:argType="string"
            android:defaultValue="addition" />
    </fragment>
</navigation>